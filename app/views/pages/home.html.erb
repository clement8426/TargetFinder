<div class="" style="width: 100%; height: 100vh; position: relative;" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  <div class="border absolute bottom-0 left-1/2 transform -translate-x-1/2 mb-4">
    <button id="toggleClubs" class="bg-gray-800 hover:bg-gray-500 text-white font-bold py-2 px-4 rounded">
      Ouvrir liste des clubs
    </button>
  </div>
<div id="clubsList" style="display: none;"><%= render 'list_club' %></div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function() {
    $('#toggleClubs').click(function() {
      $('#clubsList').slideToggle();
    });
  });
</script>
